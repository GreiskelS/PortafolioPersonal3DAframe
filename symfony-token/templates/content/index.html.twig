{% extends 'base.html.twig' %}

{% block title %}Content index{% endblock %}

{% block body %}
    <h1>Content index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name_proyect</th>
                <th>Description</th>
                <th>Proyect_type</th>
                <th>Git</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for content in contents %}
            <tr>
                <td>{{ content.id }}</td>
                <td>{{ content.NameProyect }}</td>
                <td>{{ content.Description }}</td>
                <td>{{ content.ProyectType }}</td>
                <td>{{ content.Git }}</td>
                <td>
                    <a href="{{ path('app_content_show', {'id': content.id}) }}">show</a>
                    <a href="{{ path('app_content_edit', {'id': content.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_content_new') }}">Create new</a>
{% endblock %}
